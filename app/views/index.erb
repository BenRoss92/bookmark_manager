<h1>links</h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL: <%= link.url %>
    </li>
  <% end %>
</ul>

<form action="/add-link" method="post">
  <input type="text" name="title">
  <input type="text" name="url">
  <button type="submit">Add Link</button>
<form/>
